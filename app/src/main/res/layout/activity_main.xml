<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="70sp"
        tools:layout_editor_absoluteX="147dp"
        tools:layout_editor_absoluteY="322dp" />

    <LinearLayout
        style="@style/buttonS">
        
        <Button
            style="@style/buttonNum"
            android:text="%" />
        <Button
            style="@style/buttonNum"
            android:text="√" />
        <Button
            style="@style/buttonNum"
            android:text="x^2" />
        <Button
            style="@style/buttonNum"
            android:text="1/x" />
    </LinearLayout>

    <LinearLayout
       style="@style/buttonS">
        <Button
            style="@style/buttonNum"
            android:text="CE" />
        <Button
            style="@style/buttonNum"
            android:text="C" />
        <Button
            style="@style/buttonNum"
            android:text="⌫" />
        <Button
            style="@style/buttonNum"
            android:text="÷" />
    </LinearLayout>

    <LinearLayout
       style="@style/buttonS">
        <Button
            style="@style/buttonNum"
            android:text="7 " />
        <Button
            style="@style/buttonNum"
            android:text="8" />
        <Button
            style="@style/buttonNum"
            android:text="9" />
        <Button
            style="@style/buttonNum"
            android:text="x" />
    </LinearLayout>

    <LinearLayout
        style="@style/buttonS">
        <Button
            style="@style/buttonNum"
            android:text="4" />
        <Button
            style="@style/buttonNum"
            android:text="5" />
        <Button
            style="@style/buttonNum"
            android:text="6" />
        <Button
            style="@style/buttonNum"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        style="@style/buttonS">
        <Button
            style="@style/buttonNum"
            android:text="1" />
        <Button
            style="@style/buttonNum"
            android:text="2" />
        <Button
            style="@style/buttonNum"
            android:text="3" />
        <Button
            style="@style/buttonNum"
            android:text="+" />
    </LinearLayout>

    <LinearLayout
        style="@style/buttonS">
        <Button
            style="@style/buttonNum"
            android:text="+-" />
        <Button
            style="@style/buttonNum"
            android:text="0" />
        <Button
            style="@style/buttonNum"
            android:text="." />
        <Button
            style="@style/buttonNum"
            android:text="=" />
    </LinearLayout>

</LinearLayout>